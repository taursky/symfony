{% extends 'layouts/main.html.twig' %}

{% block title %}Контакты{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1>Контакты</h1>

        <div class="row">
            <div class="col-lg-12">
                <div class="content_line"></div>
                <h4>
                    Телефон для связи :
                    <br><b class="text-muted">+7 (914) 791-43-93</b>
                </h4>
                <br>
                <form action="/send/mail" method="post">
                    <input type="hidden" name="contact" value="25sb">
                    <input type="hidden" name="idmess" value="">
                    <div class="form-group">
                        <label for="email"><h4>Ваш Email:</h4></label>
                        <input type="email" class="form-control" id="email" placeholder="Введите ваш email" name="email" value="" required="">
                    </div>
                    <div class="form-group">
                        <label for="login"><h4>Ваше Имя:</h4></label>
                        <input type="text" class="form-control" id="name" placeholder="Введите ваше Имя" name="login" value="" required="">
                    </div>

                    <div class="form-group">
                        <label for="message"><h4>Ваше сообщение:</h4></label>
                        <textarea class="form-control" rows="5" id="message" name="message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Отправить</button>
                </form>

            </div>
        </div>

    </div>
{% endblock %}